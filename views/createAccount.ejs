<script type="text/javascript">
    function create() {
        console.log("create");

        if (!$("#mb_email").val()) {
            $("#mb_email").focus();
            alert("이메일을 입력하세요");
            return false;
        }
        if (!$("#mb_name").val()) {
            $("#mb_name").focus();
            alert("성명을 입력하세요.");
            return false;
        }
        if (!$("#org_name").val()) {
            $("#org_name").focus();
            alert("기관/회사명을 입력하세요.");
            return false;
        }
        // if (!$("#site_id").val()) {
        //     $("#site_id").focus();
        //     alert("input project code, please.");
        //     return false;
        // }
        if (!$("#mb_password").val()) {
            $("#mb_password").focus();
            alert("비밀번호를 입력하세요.");
            return false;
        }
        if (!$("#mb_password_again").val()) {
            $("#mb_password_again").focus();
            alert("비밀번호를 다시 입력하세요.");
            return false;
        }
        if ($("#mb_password").val() != $("#mb_password_again").val()) {
            $("#mb_password_again").focus();
            alert("비밀번호와 재입력이 일치하지 않습니다.");
            return false;
        }

        var isChecked = $("#agree1").prop("checked");
        if (!isChecked) {
            alert("약관에 동의하세요.");
            return false;
        }

        if ($("#mb_email").val().length > 50) {
            $("#mb_email").focus();
            alert("이메일의 길이는 50자리 이하로 입력하세요.");
            return false;
        }

        if ($("#mb_name").val().length > 30) {
            $("#mb_name").focus();
            alert("이름을 30자리 이하로 입력하세요.");
            return false;
        }
        if ($("#org_name").val().length > 30) {
            $("#org_name").focus();
            alert("기관/회사명을 30자리 이하로 입력하세요.");
            return false;
        }
        // if ($("#site_id").val().length > 20) {
        //     $("#site_id").focus();
        //     alert("project code is less then 20, please.");
        //     return false;
        // }
        if ($("#mb_password").val().length > 20) {
            $("#mb_password").focus();
            alert("비밀번호는 20자리 이하로 입력하세요.");
            return false;
        }

        if ($("#mb_password").val().length < 4) {
            $("#mb_password").focus();
            alert("비밀번호는 4자리 이상으로 입력하세요.");
            return false;
        }

        event.preventDefault();
        const formData = new URLSearchParams(new FormData(document.joinForm));
        console.log(formData);
        fetch("/createaccount/", {
            method: 'POST',
            mode: 'same-origin',
            credentials: 'same-origin',
            body: formData,
        })
            .then(res => {
                res.json()
                    .then((response) => {
                        console.log("response=" + JSON.stringify(response));
                        if (res.status != 200) {
                            alert(response.message);
                            console.log(response.message);
                        } else {
                            alert(response.message);
                            console.log(response.message);

                        }
                    }).catch((error) => {
                        alert("에러가 발생 하였습니다.");
                        console.log(error);
                    });
            });
    }

    $(document).ready(function () {
        console.log("ready..");
        // $("#mb_email").val("modeller@naver.com");
        // $("#mb_name").val("Pongs");
        // $("#org_name").val("AlphaLab");
        // $("#site_id").val("recruit");
        // $("#mb_password").val("pass77");
        // $("#mb_password_again").val("pass77");

        $("#personal").change(function () {
            var isChecked = $(this).prop("checked");
            if (isChecked) {
                $("#org_name").val("personal");
            } else {
                $("#org_name").val("");
            }
        });

        $("#none").change(function () {
            var isChecked = $(this).prop("checked");
            if (isChecked) {
                $("#site_id").val("none");
            } else {
                $("#site_id").val("");
            }
        });

    });

    function viewPrivacy() {
